# ─── Node ────────────────────────────────────────────────────────────────────
NODE_ENV=development
PORT=4000

# ─── MongoDB Atlas ────────────────────────────────────────────────────────────
MONGODB_URI=mongodb+srv://<user>:<password>@cluster0.mongodb.net/kujuana?retryWrites=true&w=majority

# ─── Upstash Redis ────────────────────────────────────────────────────────────
UPSTASH_REDIS_REST_URL=https://<your-endpoint>.upstash.io
UPSTASH_REDIS_REST_TOKEN=<your-token>
# For BullMQ (ioredis-compatible URL)
REDIS_URL=rediss://:<password>@<host>:<port>

# ─── JWT ──────────────────────────────────────────────────────────────────────
JWT_ACCESS_SECRET=<generate-with-openssl-rand-hex-64>
JWT_REFRESH_SECRET=<generate-with-openssl-rand-hex-64>
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=30d

# ─── Encryption (AES-256-GCM for VIP sensitive fields) ───────────────────────
ENCRYPTION_KEY=<generate-with-openssl-rand-hex-32>

# ─── Cloudinary ───────────────────────────────────────────────────────────────
CLOUDINARY_CLOUD_NAME=<cloud-name>
CLOUDINARY_API_KEY=<api-key>
CLOUDINARY_API_SECRET=<api-secret>
CLOUDINARY_PRIVATE_FOLDER=kujuana/private

# ─── Pesapal ──────────────────────────────────────────────────────────────────
PESAPAL_CONSUMER_KEY=<key>
PESAPAL_CONSUMER_SECRET=<secret>
PESAPAL_ENV=sandbox
PESAPAL_IPN_URL=https://api.kujuana.com/api/v1/payments/webhook/pesapal

# ─── Flutterwave ──────────────────────────────────────────────────────────────
FLUTTERWAVE_PUBLIC_KEY=<key>
FLUTTERWAVE_SECRET_KEY=<secret>
FLUTTERWAVE_WEBHOOK_SECRET=<secret>

# ─── Email (Resend) ───────────────────────────────────────────────────────────
RESEND_API_KEY=re_<your-key>
EMAIL_FROM=noreply@kujuana.com

# ─── App URLs ─────────────────────────────────────────────────────────────────
API_BASE_URL=http://localhost:4000
WEB_BASE_URL=http://localhost:3000
