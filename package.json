{
  "name": "kujuana",
  "version": "2.0.0",
  "private": true,
  "scripts": {
    "dev": "corepack pnpm -r --parallel --filter './apps/*' --if-present dev",
    "build": "corepack pnpm -r --filter './packages/*' --filter './apps/*' --if-present build",
    "lint": "corepack pnpm -r --filter './packages/*' --filter './apps/*' --if-present lint",
    "test": "corepack pnpm -r --filter './packages/*' --filter './apps/*' --if-present test",
    "typecheck": "corepack pnpm -r --filter './packages/*' --filter './apps/*' --if-present typecheck",
    "seed": "tsx infra/scripts/seed.ts",
    "ensure-indexes": "tsx infra/scripts/ensure-indexes.ts",
    "format": "prettier --write \"**/*.{ts,tsx,json,md}\" --ignore-path .gitignore"
  },
  "devDependencies": {
    "prettier": "^3.3.3",
    "turbo": "^2.3.3",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3"
  },
  "packageManager": "pnpm@9.12.3",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  }
}
